#!/bin/bash -e

# -------------------------------------------------------------------------------------------------
# Functions
# -------------------------------------------------------------------------------------------------
BASEDIR=$(dirname $(readlink -f ${0}))
source "${BASEDIR}/util.sh"

function usage {
  echo "Print contents of file from commit (default commit is 'HEAD')"
  echo "Usage: ${0} [<commit>] <path to file>"
  exit 0
}

# -------------------------------------------------------------------------------------------------
# Parse Arg
# -------------------------------------------------------------------------------------------------
if [[ ${#} -eq 1 && ("${1}" == "-h" || "${1}" == "--help") ]]
then
  usage
fi

commit="HEAD"
if [[ ${#} -eq 1 ]]
then
  pathToFile="${1}"
elif [[ ${#} -eq 2 ]]
then
  commit="${1}"
  pathToFile="${2}"
else
  dieUsage "Incorrect argument count ${#}."
fi

# -------------------------------------------------------------------------------------------------
# Main
# -------------------------------------------------------------------------------------------------
git show ${commit}:${pathToFile}