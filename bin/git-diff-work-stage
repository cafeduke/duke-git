#!/bin/bash -e

# -------------------------------------------------------------------------------------------------
# Functions
# -------------------------------------------------------------------------------------------------
BASEDIR=$(dirname $(readlink -f ${0}))
source "${BASEDIR}/util.sh"

function usage {
  echo "Diff WORK:<file> with <STAGE>:<file>"
  echo "Usage: ${0} <file>"
  exit 0
}

# -------------------------------------------------------------------------------------------------
# Parse Arg
# -------------------------------------------------------------------------------------------------
if [[ ${#} -eq 1 && ("${1}" == "-h" || "${1}" == "--help") ]]
then
  usage
fi

if [[ ${#} -ne 1 ]]
then
  dieUsage "Incorrect argument count ${#}."
fi

pathToFile="${1}"

# -------------------------------------------------------------------------------------------------
# Main
# -------------------------------------------------------------------------------------------------
list=$(git-ls-stage-files)
if [[ ! "${list}" =~ "${pathToFile}" ]]
then
  echo "File '${pathToFile}' is not staged."
  exit 0
fi
git diff "${pathToFile}"
