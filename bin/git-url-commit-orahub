#!/bin/bash -e

# -------------------------------------------------------------------------------------------------
# Functions
# -------------------------------------------------------------------------------------------------
BASEDIR=$(dirname $(readlink -f ${0}))
source "${BASEDIR}/util.sh"

function usage {
  echo "Usage: ${0} [<commit1> <commit2> ... <commitN>]"
  echo "Provide the web link for the following commits"
  exit 0
}

# -------------------------------------------------------------------------------------------------
# Parse Arg
# -------------------------------------------------------------------------------------------------
if [[ ${#} -eq 1 && ("${1}" == "-h" || "${1}" == "--help") ]]
then
  usage
fi

if [ ${#} -eq 0 ]
then
  commit="HEAD"
else
  commit="${@}"
fi

# -------------------------------------------------------------------------------------------------
# Main
# -------------------------------------------------------------------------------------------------
for x in ${commit}
do
  echo "https://orahub.oraclecorp.com/fmw-webtier-dev/ohs-qa/commit/${x}"
done
