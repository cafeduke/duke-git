#!/bin/bash -e

# -------------------------------------------------------------------------------------------------
# Functions
# -------------------------------------------------------------------------------------------------
BASEDIR=$(dirname $(readlink -f ${0}))
source "${BASEDIR}/util.sh"

function usage {
  echo "Delete a branch (if present)"
  echo "Usage: ${0} <branch name>"
  exit 0
}

# -------------------------------------------------------------------------------------------------
# Parse Arg
# -------------------------------------------------------------------------------------------------
if [[ ${#} -eq 1 && ("${1}" == "-h" || "${1}" == "--help") ]]
then
  usage
fi

if [[ ${#} -ne 1 ]]
then
  dieUsage "Incorrect argument count ${#}"
fi

name=${1}

# -------------------------------------------------------------------------------------------------
# Main
# -------------------------------------------------------------------------------------------------
git branch -D ${name}
