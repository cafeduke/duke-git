#!/bin/bash -e

##
# Remove untracked files workspace (work tree)
##

# -------------------------------------------------------------------------------------------------
# Function
# -------------------------------------------------------------------------------------------------

function checkAndProceed {
  echo "Continue [y]/n ?"
  read yorn

  if [[ ! -z "${yorn}" && "${yorn}" != "y" ]]
  then
    exit 0
  fi
}

# -------------------------------------------------------------------------------------------------
# Parse Arg
# -------------------------------------------------------------------------------------------------
if [[ (${#} -eq 1 && ("${1}" == "-h" || "${1}" == "--help")) ]]
then
  echo "Remove all the untracked files"
  echo "Usage: ${0}"
  exit 0
fi

# -------------------------------------------------------------------------------------------------
# Main
# -------------------------------------------------------------------------------------------------

workFiles=$(git clean -nd)
if [[ -z "${workFiles}" ]]
then
  echo "There are no untracked files in workspace"
  exit 0
fi

echo "--------------------------------  Following files shall be deleted  -------------------------------"
echo "${workFiles}"
echo "---------------------------------------------------------------------------------------------------"
checkAndProceed
git clean -d -f 

echo ""
echo "---------------------------------------------------------------------------------------------------"
echo "Status"
echo "---------------------------------------------------------------------------------------------------"
git status