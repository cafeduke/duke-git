#!/bin/bash -e

# -------------------------------------------------------------------------------------------------
# Functions
# -------------------------------------------------------------------------------------------------
BASEDIR=$(dirname $(readlink -f ${0}))
BASENAME=$(basename ${0})

source "${BASEDIR}/util.sh"

function usage {
  echo "Delete a remote (default origin) tag (if present)"
  echo ""
  echo "Usage: ${BASENAME} [<remote>] <tag>"
  exit 0
}

# -------------------------------------------------------------------------------------------------
# Parse Arg
# -------------------------------------------------------------------------------------------------
if [[ ${#} -eq 1 && ("${1}" == "-h" || "${1}" == "--help") ]]
then
  usage
fi

remote="origin"
if [[ ${#} -eq 1 ]]
then
  tag="$1"
elif [[ ${#} -eq 2 ]]
then
  remote="$1"
  tag="$2"
else
  dieUsage "Incorrect argument count ${#}"
fi

# -------------------------------------------------------------------------------------------------
# Main
# -------------------------------------------------------------------------------------------------
git push --delete ${remote} ${tag}
